# Supabase (use Project URL and Service Role Key from Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Z-API (optional; if absent the backend will simulate sends)
ZAPI_INSTANCE_ID=your_instance_id
ZAPI_TOKEN=your_token
ZAPI_CLIENT_TOKEN=your_client_token
ZAPI_SEND_URL= # optional full send URL (overrides BASE/INSTANCE/TOKEN)

# Development helpers
# When true the app will skip real network sends and only log the action
ZAPI_SKIP_SEND=true

# Optional: webhook verification token for Facebook/WhatsApp-like webhook verification
VERIFY_TOKEN=some_random_verify_token

PORT=3000
