{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": [
            "ES2020"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "rootDir": "./backend",
        "allowJs": true,
        "checkJs": false,
        "declaration": false,
        "sourceMap": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "backend/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "frontend"
    ],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}